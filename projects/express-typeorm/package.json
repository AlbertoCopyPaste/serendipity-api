    "@types/multer": "^1.3.7",
    "@types/node": "^8.0.29",
    "@types/stack-trace": "0.0.29",
    "@types/winston": "^2.4.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2",
    "yamlinc": "^0.1.9"
