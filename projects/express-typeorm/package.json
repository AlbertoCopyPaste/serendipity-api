    "convict": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet": "^3.18.0",
    "injection-js": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
